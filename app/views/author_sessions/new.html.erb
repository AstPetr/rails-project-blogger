<h1>Prisijungimas</h1>

<%= form_tag author_sessions_path, method: :post do %>
  <p>
    <%= label_tag :email, "Elektroninis Paštas" %><br />
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password, "Slaptažodis" %><br />
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag "Prisijunk", class: 'btn' %>
  </p>
<% end %>

<%= link_to '<< Atgal', articles_path %>
